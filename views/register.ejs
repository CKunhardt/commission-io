<% include partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6 jumbotron">
            <form class="form-horizontal" action="/register" method="POST">
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="register-username">Username</label>
                    <div class="col-sm-10">
                        <input class="form-control" type="text" id="register-username" name="username" placeholder="Username:">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="register-password">Password</label>
                    <div class="col-sm-10">
                        <input class="form-control" type="password" id="register-password" name="password" placeholder="Password:">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="wallet-address">Wallet Address</label>
                    <div class="col-sm-10">
                        <input class="form-control" type="text" id="wallet-address" name="address" placeholder="Wallet Address:">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button class="btn btn-default" type="submit">Register</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<% include partials/footer %>