<% include partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6 jumbotron">
            <form class="form-horizontal" action="/connect" method="POST">
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="connect-username">Username</label>
                    <div class="col-sm-10">
                        <input class="form-control" type="text" id="connect_username" name="username" placeholder="Username to send to:">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="connect-amount">Amount</label>
                    <div class="col-sm-10">
                        <input class="form-control" type="text" id="connect_amount" name="amount" placeholder="Amount to send, in wei:">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button class="btn btn-default" type="submit">Send</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<% include partials/footer %>